            <secondary>&gt;</secondary>
            <tertiary><?latex-index-style \textbf?>&lt;\~^&amp;"|!@{}\#\ #_$}^%{&gt;\</tertiary>
          </indexterm>
        </listitem>
      </itemizedlist>
    </sect1>
