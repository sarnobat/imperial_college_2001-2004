import List

data Colour = R | B | G deriving ( Eq, Ord, Show )

type Colours = [ Colour ]

type Score = ( Int, Int )

type Result = ( Colours, Score )

colour :: Int -> Colour
base3 :: Int -> Int -> [ Int ]
blacks :: Colours -> Colours -> Int
score :: Colours -> Colours -> Result
allGuesses :: Int -> [ Colours ]
consistent :: Colours -> [ Result ] -> Bool
strike :: [ Colours ] -> [ Result ] -> [ Colours ]

---------------------------------------------------------------------

-- colour: 2 marks
colour 0 = R
colour 1 = B
colour 2 = G

-- base3: 4 marks
base3 x n
  = if n == 0
    then []
    else base3 ( x `div` 3 ) ( n - 1 ) ++ [ x `mod` 3 ]

-- allGuesses: 3 marks
allGuesses n
  = map ( map colour . flip base3 n ) [ 0 .. 3^n-1 ]

-- blacks: 3 marks
blacks guess secret =
  sum [ 1 | (x,y) <- zip guess secret, x == y ]

-- score: 4 marks
score guess secret =
  ( guess, ( b, length secret - length ( guess \\ secret ) - b ) )
  where
    b = blacks guess secret

-- consistent: 6 marks
consistent g rs
  = rs == map ( flip score g ) ( map fst rs )

-- strike: 3 marks
strike gs rs
  = filter ( flip consistent rs ) gs




